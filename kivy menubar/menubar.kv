#:kivy 1.0.9
<menubarLayout>:
    id: 'layout'
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos

<menuTab>:
    id: 'tab'
    canvas:
        Color:
            rgba: .5,.5,.5,1
        Rectangle:
            size: self.size
            pos: self.pos

<color_button>:
    size_hint: (None,None)
    size: (20,20)
    pos: self.pos
    pos_hint: {'top':0.9}

<brush_size_menu>:
    canvas:
        Color:
            rgba: .7,.7,.7,1
        Rectangle:
            size: self.size[0] + 6, self.size[1]
            pos: self.pos[0]-3, self.pos[1]
        
<color_menu>:
    canvas:
        Color:
            rgba: .7,.7,.7,1
        Rectangle:
            size: self.size[0] + 6, self.size[1]
            pos: self.pos[0]-3, self.pos[1]