#:kivy 1.0.9
<menubarLayout>:
    id: 'layout'
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos

<menuTab>:
    id: 'tab'
    canvas:
        Color:
            rgba: .5,.5,.5,1
        Rectangle:
            size: self.size
            pos: self.pos

<color_button>:
    size_hint: (None,None)
    size: (17,17)

<brush_size_menu>:
    canvas:
        Color:
            rgba: .7,.7,.7,1
        Rectangle:
            size: self.size[0] + 6, self.size[1]
            pos: self.pos[0]-3, self.pos[1]
        
<color_menu>:
    padding: 5,0,5,0
    canvas:
        Color:
            rgba: .7,.7,.7,1
        Rectangle:
            size: self.size
            pos: self.pos[0], self.pos[1]

<color_rgb_menu>:
    canvas:
        Color:
            rgba: 1,0,0,1
        Rectangle:
            pos: self.pos[0], self.pos[1]
            size: self.size[0]/3 , self.size[1]
        Color:
            rgba: 0,1,0,1
        Rectangle:
            pos: self.pos[0]+self.size[0]/3, self.pos[1]
            size: self.size[0]/3 , self.size[1]
        Color:
            rgba: 0,0,1,1
        Rectangle:
            pos: self.pos[0]+self.size[0]*2/3, self.pos[1]
            size: self.size[0]/3 , self.size[1]
        