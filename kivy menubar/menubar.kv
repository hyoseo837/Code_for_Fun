#:kivy 1.0.9
<menubarLayout>:
    id: 'layout'
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos

<menuTab>:
    id: 'tab'
    canvas:
        Color:
            rgba: .5,.5,.5,1
        Rectangle:
            size: self.size
            pos: self.pos

<color_button>:
    size_hint: (None,0.8)
    size: (30,30)
    pos_hint: {'top':0.9}